{
    "compilerOptions": {
        "target": "es5",
        "module": "ES2015",
        "moduleResolution": "node",
        "lib": [
            "es6",
            "es2015",
            "dom"
        ],
        "declaration": true,
        "outDir": "lib",
        "rootDir": "src",
        "strict": true,
        "types": [
            "node"
        ],
        "skipLibCheck": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "resolveJsonModule": false,
        "allowSyntheticDefaultImports": true
    }
}